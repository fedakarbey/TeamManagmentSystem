@model KisiDTO

<div class="container">
    <h2 class="text-center">Kişi Ekle</h2>
    <br />
    <div>
        <form asp-action="KisiEkle" asp-controller="Team" method="post">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label class="h6">Adı</label>
                    <input asp-for="Ad" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="h6">Soyadı</label>
                    <input asp-for="Soyad" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="h6">UnvanID</label>
                    <input asp-for="UnvanID" class="form-control" max="4" min="1"/>
                </div>
                <button type="submit" class="mt-3 text-center btn btn-success">EKLE</button>
            </div>
        </form>
    </div>
</div>